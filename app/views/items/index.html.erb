
<h1><%=current_user.name%>'s List</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Days Left</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr id="<%= item.id %>">
        <td><%= item.name %></td>
        <td><%= link_to item.user.name, item.user %></td>
        <td><%= item.days_left %></td>
        <td><%= link_to 'Show ', item %></td>
        <td><%= link_to 'Edit ', edit_item_path(item) %></td>
        <td><%= link_to ' ', item, method: :delete, class: 'glyphicon glyphicon-ok', data: { confirm: 'Are you sure?' }, remote: :true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path, class: 'btn btn-info btn-lg' %>