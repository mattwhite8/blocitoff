
<!DOCTYPE html>
<html>
<head>
  <title>Blocitoff</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  
       <p class="notice"><%= notice %></p>                                                               
       <p class="alert"><%= alert %></p> 
  
  <div> <% if current_user %> <%= link_to "Profile", user_path(current_user) %> 
    <div><%= link_to "Edit Profile", edit_user_registration_path %></div>
    <div><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></div>
    <div><%= link_to "To Do List", items_path(current_user) %></div>
    <% else %>
      <div> <%= link_to "Sign In", new_user_session_path %> </div> 
      <div> <%= link_to "New User", new_user_registration_path %> </div>
    <% end %> </div>

<%= yield %>

</body>
</html>